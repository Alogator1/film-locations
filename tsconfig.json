{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "paths": {
      "@env": ["./src/enviroment.ts"],
      "@store": ["./src/store/index"],
      "@store/*": ["./src/store/*"],
      "@core": ["./src/core/index"],
      "@core/*": ["./src/core/*"],
      "@api": ["./src/api/index"],
      "@app": ["./src/modules/app/index"],
      "@app/*": ["./src/modules/app/*"],
      "@home-page": ["./src/modules/home-page/index"],
      "@home-page/*": ["./src/modules/home-page/*"],
      "@locations": ["./src/modules/locations/index"],
      "@locations/*": ["./src/modules/locations/*"],
      "@locations-create": ["./src/modules/locations-create/index"],
      "@locations-create/*": ["./src/modules/locations-create/*"],
      "@film-base": ["./src/modules/film-base/index"],
      "@film-base/*": ["./src/modules/film-base/*"],
      "@login": ["./src/modules/login/index"],
      "@login/*": ["./src/modules/login/*"],
      "@registration": ["./src/modules/registration/index"],
      "@registration/*": ["./src/modules/registration/*"]
    }
  },
  "include": ["./src/**/*", "./typings/**/*"],
  "exclude": ["node_modules", "@types"]
}
